pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Checkout the source code from your version control system (e.g., Git)
                checkout scm
            }
        }

        stage('Build') {
            steps {
                // Use Maven to build the Java project
                sh 'mvn clean install'
            }
        }

        stage('Test') {
            steps {
                // Run tests using Maven
                sh 'mvn test'
            }
        }

        stage('Deploy') {
            steps {
                // You can add deployment steps here (e.g., deploying to a server)
                // For example, deploying to Tomcat
                // sh 'mvn tomcat7:redeploy'
            }
        }
    }

    post {
        success {
            // Actions to be performed if the pipeline is successful
            echo 'Build and test successful! Deploying...'
        }
        failure {
            // Actions to be performed if the pipeline fails
            echo 'Build or test failed! No deployment will be done.'
        }
    }
}
